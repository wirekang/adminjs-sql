{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}